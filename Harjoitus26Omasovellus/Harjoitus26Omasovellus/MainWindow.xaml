<Window x:Class="Harjoitus26Omasovellus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus26Omasovellus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="taskListBox" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox Name="taskTextBox" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Add Task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="220,220,0,0" Click="AddTask_Click"/>
        <Button Content="Remove Task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="300,220,0,0" Click="RemoveTask_Click"/>
    </Grid>

</Window>
