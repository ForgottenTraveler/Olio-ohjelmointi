<Window x:Class="Harjoitus22Pintaalalaskuri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus22Pintaalalaskuri"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ikkunan Leveys (mm):" Margin="10"/>
        <TextBox x:Name="txtLeveys" Grid.Row="0" Margin="162,0,0,36" Grid.RowSpan="2"/>

        <TextBlock Text="Ikkunan Korkeus (mm):" Grid.Row="1" Margin="10"/>
        <TextBox x:Name="txtKorkeus" Grid.Row="1" Margin="162,0,0,36" Grid.RowSpan="2"/>

        <TextBlock Text="Karmipuun Leveys (mm):" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="txtKarmi" Grid.Row="2" Margin="162,0,0,200" Grid.RowSpan="2"/>

        <Button Content="Laske" Grid.Row="3" Margin="10" Click="btnLaske_Click"/>

        <Canvas x:Name="canvas" Grid.Row="4" Height="200"/>
    </Grid>
</Window>
