<Window x:Class="Harjoitus21Kauppalista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus21Kauppalista"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <StackPanel Name="StockPanel" Margin="10">
            <CheckBox Name="chkMaito" Content="Maito"/>
            <CheckBox Name="chkLeipä" Content="Leipä"/>
            <CheckBox Name="chkJuusto" Content="Juusto"/>
            <CheckBox Name="chkKahvi" Content="Kahvi"/>
            <CheckBox Name="chkSuklaa" Content="Suklaa"/>
            <Button Content="Osta" Click="btnOsta_Click" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
